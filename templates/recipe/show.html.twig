{% extends 'base.html.twig' %} {% block title %}Recipe{% endblock %} {% block
body %} {% include "components/navbar/navbar.html.twig" %}

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header text-center" style="background-color: #c1d8c3">
          <h1 class="my-0">Recipe Details</h1>
        </div>
        <div class="card-body">
          <h2 class="display-5 text-center">
            {{ recipe.name }}
          </h2>

          <h4>Steps</h4>
          <p>
            {{ recipe.description }}
          </p>

          <h4>Time</h4>
          <p>
            {{ recipe.cookingTime }}
          </p>

          <h4>Calories</h4>
          <p>{{ recipe.calories }}</p>

          <h4>Created by</h4>
          <p>
            {{ recipe.author.name }}
          </p>

          {% if recipe.author.id == app.user.id %}
          <a href="{{ path('app_recipe_edit', { id: recipe.id }) }}">edit</a>
          {{ include("recipe/_delete_form.html.twig") }}
          {% endif %}

          <p>
            <a href="{{ path('app_recipe_index') }}">back to list</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

{% include "components/footer/footer.html.twig" %} {% endblock %}
