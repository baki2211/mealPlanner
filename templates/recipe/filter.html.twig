{% extends 'base.html.twig' %} {% block title %}Select Recipe{% endblock %} {%
block body %} {% include "components/navbar/navbar.html.twig" %} {% block
stylesheets %} {% endblock %}

<div class="container">
  <h1>All ***Category*** Recipes</h1>
  <a href="{{ path('app_recipe_new') }}" class="btn btn-success">Create new recipe</a>
  <a href="#" class="btn btn-success">View your recipes</a>

  <div class="row row-cols-3 row-gap-3 mt-3 mb-3">
    {% if recipes|length > 0 %} {% for recipe in recipes %}
    <div>
      <div class="card" style="width: 18rem">
        {# <img src="..." class="card-img-top" alt="..." /> #}
        <div class="card-body">
          <h5 class="card-title">{{ recipe.name }}</h5>
          <p class="card-text">{{ recipe.description }}</p>
          <p class="card-text">Cooking time: {{ recipe.cookingTime }}</p>
          <p class="card-text">Calories: {{ recipe.calories }}</p>
          <a href="{{ path('app_recipe_show', { id: recipe.id }) }}" class="btn btn-primary">Show details</a>
          {% if recipe.author.id == app.user.id %}
          <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-warning">Edit</a>

          {% endif %}
        </div>
      </div>
    </div>
    
    {% endfor %} {% else %}
    <p>No records found</p>

    {% endif %}
  </div>
</div>
{% include "components/footer/footer.html.twig" %} {% endblock %}