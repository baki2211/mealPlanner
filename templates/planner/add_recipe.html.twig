{% extends 'base.html.twig' %}

{% block title %}Select Recipe{% endblock %}

{% block body %}
    <h1>Select a Recipe</h1>

    <form method="post">
        <input type="hidden" name="day" value="{{ dayId }}">
        <input type="hidden" name="time" value="{{ timeId }}">
        <input type="hidden" name="planner" value="{{ plannerId }}">
        
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CookingTime</th>
                <th>Calories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
                {% if recipes|length > 0 %}
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.id }}</td>
                    <td>{{ recipe.name }}</td>
                    <td>{{ recipe.description }}</td>
                    <td>{{ recipe.cookingTime }}</td>
                    <td>{{ recipe.calories }}</td>
                    <td>
                        <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                        <button type="submit" name="recipe" value="{{ recipe.id }}">Add</button>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    </form> 
{% endblock %}
